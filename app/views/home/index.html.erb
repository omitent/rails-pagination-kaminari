<div class="row">
    <div class="col-md-8 offset-md-2">
    <div class="jumbotron">
    <h1 class="display-4">Bienvenido a mi Blog</h1>
    <hr class="my-4">
    <p>Hecho con ❤️ en Ruby on Rails</p>
    </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
    <% @posts.each do |post| %>
    <div class="row">
    <div class="col-md-12"><h3><%= post.title%></h3></div>
    <div class="col-md-12 small">
    <span><strong>Created by:</strong> <span
    class="font-weight-light"><%= post.author %></span></span>
    <span><strong>on </strong> <span class="font-weight-light"><%=
    post.created_at %></span></span>
    </div>
    <div class="col-md-12"><p><%= post.description%></p></div>
    </div>
    <% end %>
    </div> 
</div>


<div class="row">
    <div class="col-md-8 offset-md-2">
    <%= paginate @posts %>
    </div>
</div>  

<br>

<div class="row">
    <div class="col-md-8 offset-md-2">
    <%= link_to 'Nuevo Post', new_post_path %>
    </div>
</div> 